---
import { PageRefs } from "../logic";
import TreePalm from "lucide-astro/TreePalm";

const links = [
  { href: PageRefs.reasonsHash, text: "Razones" },
  { href: PageRefs.joinUsHash, text: "Contribuir" },
  { href: PageRefs.contact, text: "Contacto" },
];
---

<nav class="flex w-full bg-primary p-4 text-white max-sm:justify-center">
  <a
    class="mr-auto flex gap-1 min-[370px]:max-[441px]:mr-0"
    type="button"
    href="/"
  >
    <TreePalm />
    <h1 class="hidden font-bold max-[370px]:block min-[441px]:block">NODESS</h1>
  </a>
  <div class="max-[370px]:hidden lg:mr-auto">
    {
      links.map((link) => (
        <a
          class="btn"
          class="rounded-md px-4 py-2 hover:bg-primary-focus"
          href={link.href}
        >
          {link.text}
        </a>
      ))
    }
  </div>
</nav>
